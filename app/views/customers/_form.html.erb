<div class="modal-dialog">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h2 class="modal-title">Customer information</h2>
    </div>
    <div class="modal-body">
      <%= form_for @customer, remote: true do |f| %>
      <br />
      <%= f.label :Firstname, :class => "h4" %>
      <%= f.text_field :firstname ,:class => "form-control input-lg", :placeholder => "Firstname"  %>
      <br />
      <%= f.label :Lastname, :class => "h4" %>
      <%= f.text_field :lastname ,:class => "form-control input-lg", :placeholder => "Lastname"  %>
      <br />
      <%= f.label :Email, :class => "h4" %>
      <%= f.text_field :email ,:class => "form-control input-lg", :placeholder => "Email"  %>
      <br />
      <%= f.label :Phoen_number, :class => "h4" %>
      <%= f.text_field :phone_number ,:class => "form-control input-lg", :placeholder => "Phone number"  %>
      <br />
      <%= f.label :Fax, :class => "h4" %>
      <%= f.text_field :fax ,:class => "form-control input-lg", :placeholder => "Fax number"  %>
      <br />
      <%= f.label :Address, :class => "h4" %>
      <%= f.text_area :address ,:class => "form-control input-lg", :placeholder => "Address"  %>
      <br />
      <%= f.submit "Submit" , :class => "btn btn-primary btn-lg center-block " %>
      <% end %>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
    </div>
  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->