<div class="col-md-3 customer" id="customer_<%= customer.id %>" >
  <div>
    <div class="name-tag">
      <%= customer.firstname %>
      <%= customer.lastname %>
    </div>
    <div class="detail">
      Email: <%= customer.email %><br>
      Tel. <%= customer.phone_number %>     
      Fax. <%= customer.fax %> 
    </div>
    <div class="detail">
      <%= link_to ' Show', customer_path(customer.id) %> |
      <%= link_to ' Edit', edit_customer_path(customer.id), remote: true %> |
      <%= link_to ' Delete', customer_path(customer.id), method: :delete, data: { confirm: "Are you sure?" }, remote: true %>
    </div>
  </div>
</div>