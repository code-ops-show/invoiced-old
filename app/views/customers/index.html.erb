<div class="wrapper">
  <div class="container">
    <div class="row">
      <div class="col-md-3" >
        <h2 class="aqua">Customer List</h2>
      </div>
      <div class="col-md-6" style="padding-top: 24px;">
        <%= render 'search' %>
      </div>
      <div class="col-md-3 right" style="padding-top: 20px;">
        <%= link_to new_customer_path, remote: true, class: "btn btn-primary btn-success" do %>
        <span class="glyphicon glyphicon-plus-sign"></span>
        <span class="glyphicon glyphicon-user"></span>
        New Customer
        <% end %>
      </div>
    </div>
    <hr>
    <%= content_tag :div, id: 'customers', class: 'notification', data: { channel: "customers", event: customers_event} do %>
    <%= render 'customers', customers: @customers %>
    <% end %>
  </div>
  <div class="smallbox">
    <div id='modal-box' class='modal fade'></div>
  </div>
</div>