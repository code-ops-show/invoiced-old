<tr data-item-id="<%= f.object.id %>" class="extra fields">
  <td>
    <label class="sr-only" for="prefix">Prefix</label>
    <%= f.select :prefix, [['Discount', 'discount'], ['Extra cost', 'cost']], {:selected => 'Discount'}, { :class => 'form-control' } %>
  </td>
  <td>
  <label class="sr-only" for="name">name</label>
    <%= f.text_field :name, placeholder: "Extras", class: "form-control" %>
  </td>
  <td>
    <div class="form-inline">
      <label class="sr-only" for="extra_value">Extra value</label>
      <%= f.text_field :extra_value, placeholder: "Value", class: "form-control" %>
      <label class="sr-only" for="method">Method</label>
      <%= f.select :method, [['Value', 'value'], ['Percentage', 'percentage']], {:default => 'value'}, { :class => 'form-control' } %>
    </div>
  </td>
  <td>
    <label class="sr-only" for="amount">Amount</label>
    <%= f.text_field :amount, placeholder: "Amount", class: "form-control" %>
    <%= f.hidden_field :row_order, class: "extra_val" %>
  </td>
  <td>
    <%= f.link_to_remove "Remove" %>
  </td>
</tr>


