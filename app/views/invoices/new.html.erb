<div class="container-fluid">
<h1>Add new invoice</h1>
  <ol class="breadcrumb">
    <li><%= link_to 'Index', root_path %></li>
    <li class="active">New</li>
  </ol>


<div class="box">
  <%= form_for @invoice do |form| %>
    <fieldset class="fields">
      <div class="field">
        <%= form.label "Invoice number" %>
        <%= form.text_field :number %>
      </div>
      
      <div class="field">
        <%= form.label "issue date"  %>
        <%= form.date_select(:issue_date) %> 
      </div>
      <div class="field">
        <%= form.label "due date"  %>
        <%= form.date_select(:due_date) %>  
      </div>
      <div class="field">
        <%= form.label "total"  %>
        <%= form.text_field :total %>
      </div>
        <%= form.submit "Add new invoice" %>    
  <% end %>

  <br /><br /><br />
  <%= link_to 'Back to index', root_path %>

</div>

