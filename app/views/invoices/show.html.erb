<div class="box">
  <ol class="breadcrumb">
    <li>Invoice</li>
    <li><%= link_to 'Index', root_path %></li>
    <li class="active">Details</li>
  </ol>
  <div class="row">
    <div class="col-md-8">
    </div>
    <div class="col-md-4">
      <h3 class="right"><%= link_to 'Edit', edit_customer_invoice_path(@customer, @invoice) %>  |
      <%= link_to 'Delete', @invoice, method: :delete, data: { confirm: "Are you sure?" } %></h3>
    </div>
  </div>
  <div class="panel panel-default">
    <div class="row">
      <div class="col-md-8">
          <div style="margin-left: 50px">
          <%= image_tag attachment_url(current_user, :logo_image, :fill, 150, 150, format: "jpg") %>
          </div>
          <address class="box">
          <%= current_user.first_name %> <%= current_user.last_name %><br>
            <strong>Address:</strong><br>
            <%= @current_user.address %><br>
            <label for="phone_number">Tel.</label><%= current_user.phone_number %>
            <label for="fax">Fax.</label><%= current_user.fax %><br>
            <label for="email">Email:</label><%= current_user.email %>
          </address>
          <address class="box">
            <strong>Custome:</strong>
            <%= @customer.firstname %> <%= @customer.lastname %><br>
            <strong>Address:</strong><br>
            <%= @customer.address %><br>
            <label for="phone_number">Tel.</label><%= @customer.phone_number %>
            <label for="fax">Fax.</label><%= @customer.fax %><br>
            <label for="email">Email:</label><%= @customer.email %>
          </address>
      </div>
      <div class="col-md-4">
        <div class="rightBox">
          <h1  style="color:red"><str>INVOICE</str></h1>
          <address>
            <h4 class="gray">INVOICE No. [<span  style="color:red"><%= @invoice.number %></span>]</h4>
            <h4 class="gray">Issue Date: <%= @invoice.issue_date.to_date %></h4>
            <h4 class="gray">Due Date:&nbsp;&nbsp;&nbsp;<span  style="color:red"><%= @invoice.due_date.to_date %></span></h4>
          </address>    
        </div>    
      </div>
    </div>

    <table class="table table-striped" style="wrap-table">
      <thead>
        <tr>
          <th class="center">DESCRIPTION</th>
          <th class="center">QUANTITY</th>
          <th class="center">UNIT PRICE</th>
          <th class="center">AMOUNT</th>
        </tr>
          <% for line_item in @invoice.line_items %>
            <tr>
              <td class="center"><%= line_item.item %></td>
              <td class="center"><%= line_item.quantity %></td>
              <td class="center"><%= line_item.unit_price %></td>
              <td class="center"><%= line_item.amount %></td> 
            </tr>
          <% end %>
        <tr>
          <td></td>
          <td></td>
          <td class="right"><h4>Sub Total</h4></td>
          <td class="right"><h4><%= @invoice.total.round(2) %> Baht</h4></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td class="right"><h4>VAT 7%</h4></td>
          <td class="right"><h4><%= vat = (@invoice.total * 0.07).round(2) %> Baht</h4></td>
        </tr>
        <tr>
          <td></td>
          <td></td>
          <td class="right"><h4>Total</h4></td>
          <td class="right"><h4><%= @invoice.total + vat %> Baht</h4></td>
        </tr>
      </thead>
    </table>
  </div>
  <br />

  <div class="row">
      <h4><%= link_to 'Back to index', root_path %></h4>
  </div>

</div>




