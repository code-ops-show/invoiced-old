<!DOCTYPE html>
<html>
<head>
  <title>Invoiced</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" <%= link_to "INVOICE APPLICATION", customers_path %> </a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if current_page?(customers_path) || current_page?(root_path) %>">
            <%= link_to "Customer", customers_path, :class => "navbar-brand", :style => "margin-left: 50px" %></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>       
              <div class="pull-right">
                <ul class="nav pull-right">
                    <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, <%= current_user.email %><b class="caret"></b></a>
                        <ul class="dropdown-menu">
                            <li><a href="/user/preferences"></i> <%= link_to 'Edit profile', edit_user_registration_path %></a></li>
                            <li class="divider"></li>
                            <li><a href="/auth/logout"> <%= link_to "Logout", destroy_user_session_path, method: :delete %></a></li>
                        </ul>
                    </li>
                </ul>
              </div>   

            <% end %>
          </ul>
        </div><!--/.nav-collapse -->
      </div>
  </nav>

</head>
<body>
<div class="wrap">
  <% flash.each do |key, value| %>
    <br /><br />
    <h2><%= value %></h2>
  <% end %>
</div>
<%= yield %>

</body>
</html>
