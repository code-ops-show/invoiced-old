<!DOCTYPE html>
<html>
  <head>
    <title>Invoiced</title>
    <%= include_gon %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js" type="text/javascript" charset="UTF-8"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
    <nav class="navbar navbar-findcond navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" <%= link_to "INVOICE APPLICATION", customers_path %></a>
          <ul class="nav navbar-nav">
            <li class="<%= 'active' if current_page?(customers_path) || current_page?(root_path) %>">
              <%= link_to "Customer", customers_path, :class => "navbar-brand" %>
            </li>
          </ul>
        </div>
        <div class="collapse navbar-collapse" id="navbar">
          <% if user_signed_in? %>
          <ul class="nav navbar-nav navbar-right">
            <% if current_page?(customers_path) || current_page?(root_path) %>
            <li class="navbar-brand" style="max-width: 700px; padding-top: 10px;">
              <%= render '/layouts/search' %>
            </li>
            <% end %>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle navbar-brand" data-toggle="dropdown" role="button" aria-expanded="false"><%= current_user.first_name %> <span class="caret"></span></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="/user/preferences"><%= link_to 'Edit profile', edit_user_registration_path %></a></li>
                <li class="divider"></li>
                <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
              </ul>
            </li>
          </ul>
        </div>
        <% end %>
      </div>
    </nav>
  </head>
  <body class='<%= controller_name %> <%= action_name %>'>
    <%= yield %>
  </body>
</html>